FROM @@IMAGE@@

RUN apt-get -y update && \
    apt-get -y install curl git zsh vim tmux && \
RUN test -e /etc/locale.gen && cat /etc/locale.gen
RUN test -e /etc/locale.conf && cat /etc/locale.conf

#test -e /etc/locale.conf || sudo localectl set-locale LANG=en_US.UTF-8

ADD .github/docker/entrypoint* /
RUN chmod +x /entrypoint*